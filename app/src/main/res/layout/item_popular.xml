<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_popular"
        android:layout_width="160dp"
        android:layout_height="214dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/title_pop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Maze Runner - Guide to Tâ€¦"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/img_popular"
        app:layout_constraintStart_toStartOf="@+id/img_popular"
        app:layout_constraintTop_toBottomOf="@+id/img_popular" />

    <TextView
        android:id="@+id/pop_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dylan O'Brien, Kaya Scodelario, Will Poulter"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="@+id/img_popular"
        app:layout_constraintStart_toStartOf="@+id/img_popular"
        app:layout_constraintTop_toBottomOf="@+id/title_pop" />
</androidx.constraintlayout.widget.ConstraintLayout>